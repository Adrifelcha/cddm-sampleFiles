
        data {
              tmin <- 0.95 * min(X[2,])
        }
  
        model{
              # Likelihood
                for (i in 1:N) {
                     X[1:2,i] ~ dcddm(drift, bound, ter0, theta0)
                }
                  
              # Priors
                drift ~ dnorm(0,1)T(0,)
                bound ~ dunif(0,5)
                ter0 ~ dexp(1)T(,tmin)
                theta0 ~ dunif(0,6.283185)
              }
